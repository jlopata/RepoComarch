	<script type="text/javascript">
	function podajImie() {
		var imie = prompt("Podaj imie:")
		if(imie != null){
			return imie;
		}
		else{
			podajImie();
		}
	}
	
	function podajNazwisko() {
		var nazwisko = prompt("Podaj imie:")
		if(nazwisko != null){
			return nazwisko;
		}
		else{
			podajNazwisko();
		}
	}
	
	function podajWiek() {
		var wiek = prompt("Podaj imie:")
		if(Wiek != null && wiek === typeof "number"){
			return wiek;
		}
		else{
			podajWiek();
		}
	}
	
	document.getElementById('prompt').onclick = function() {
        podajImie();
        podajNazwisko();
        podajWiek();
    }
